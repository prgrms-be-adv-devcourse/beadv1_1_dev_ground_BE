<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 로그 파일 기본 경로 및 이름 -->
    <property name="LOG_DIR" value="./logs/"/>
    <property name="SAGA_LOG_DIR" value="./logs/kafka/saga"/>
    <property name="ELASTICSEARCH_LOG_DIR" value="./logs/elasticsearch"/>

    <property name="LOG_FILE_NAME" value="info/info"/>
    <property name="ERROR_LOG_FILE_NAME" value="error/error"/>

    <property name="SAGA_INFO_LOG_FILE" value="${SAGA_LOG_DIR}/info/info"/>
    <property name="SAGA_ERROR_LOG_FILE" value="${SAGA_LOG_DIR}/error/error"/>
    <property name="SAGA_TIMEOUT_LOG_FILE" value="${SAGA_LOG_DIR}/timeout/error"/>

    <property name="ES_INDEX_INFO_LOG_FILE" value="${ELASTICSEARCH_LOG_DIR}/index/info/info"/>
    <property name="ES_INDEX_ERROR_LOG_FILE" value="${ELASTICSEARCH_LOG_DIR}/index/error/error"/>
    <property name="ES_INDEX_JSON_LOG_FILE" value="${ELASTICSEARCH_LOG_DIR}/index/index"/>

    <property name="ES_BATCH_INFO_LOG_FILE" value="${ELASTICSEARCH_LOG_DIR}/batch/info/info"/>
    <property name="ES_BATCH_ERROR_LOG_FILE" value="${ELASTICSEARCH_LOG_DIR}/batch/error/error"/>

    <property name="ES_SEARCH_INFO_LOG_FILE" value="${ELASTICSEARCH_LOG_DIR}/search/info/info"/>
    <property name="ES_SEARCH_ERROR_LOG_FILE" value="${ELASTICSEARCH_LOG_DIR}/search/error/error"/>
    <property name="ES_SEARCH_JSON_LOG_FILE" value="${ELASTICSEARCH_LOG_DIR}/search/search"/>

    <!-- Saga 패턴 -->
    <property name="SAGA_INFO_PATTERN"
              value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} [SagaId=%X{sagaId:-N/A}] [ProductCode=%X{productCode:-N/A}] %msg%n"/>
    <property name="SAGA_ERROR_PATTERN"
              value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} [SagaId=%X{sagaId:-N/A}] [ProductCode=%X{productCode:-N/A}] [Exception=%X{errorMsg:-N/A}] %msg%n"/>

    <!-- ES 인덱싱 패턴 -->
    <property name="ES_INDEX_INFO_PATTERN"
              value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} [ProductId=%X{productId:-N/A}] [ProductCode=%X{productCode:-N/A}] %msg%n"/>
    <property name="ES_INDEX_ERROR_PATTERN"
              value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} [ProductId=%X{productId:-N/A}] [ProductCode=%X{productCode:-N/A}] [Exception=%X{errorMsg:-N/A}] %msg%n"/>

    <!-- ES 배치 패턴 -->
    <property name="ES_BATCH_PATTERN"
              value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- ES 검색 패턴 -->
    <property name="ES_SEARCH_INFO_PATTERN"
              value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} [Keyword=%X{keyword:-N/A}] [SuggestType=%X{suggestType:-N/A}] %msg%n"/>
    <property name="ES_SEARCH_ERROR_PATTERN"
              value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} [Keyword=%X{keyword:-N/A}] [SuggestType=%X{suggestType:-N/A}] [Exception=%X{errorMsg:-N/A}] %msg%n"/>

    <!-- 콘솔 출력 Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %highlight(%-5level) %magenta(%-4relative) --- [ %thread{10} ]
                %cyan(%logger{20}) : %msg%n
            </pattern>
        </encoder>
    </appender>

    <springProfile name="stage | deploy">
        <!-- 성공 로그 파일 Appender -->
        <appender name="LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_DIR}/${LOG_FILE_NAME}.log</file>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>DENY</onMatch>
                <onMismatch>ACCEPT</onMismatch>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_DIR}/${LOG_FILE_NAME}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- ERROR 로그 파일 Appender -->
        <appender name="ERROR_LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_DIR}/${ERROR_LOG_FILE_NAME}.log</file>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_DIR}/${ERROR_LOG_FILE_NAME}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- Saga INFO 로그 -->
        <appender name="SAGA_INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${SAGA_INFO_LOG_FILE}.log</file>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>DENY</onMatch>
                <onMismatch>ACCEPT</onMismatch>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${SAGA_INFO_LOG_FILE}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${SAGA_INFO_PATTERN}</pattern>
            </encoder>
        </appender>

        <!-- Saga ERROR 로그 -->
        <appender name="SAGA_ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${SAGA_ERROR_LOG_FILE}.log</file>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${SAGA_ERROR_LOG_FILE}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${SAGA_ERROR_PATTERN}</pattern>
            </encoder>
        </appender>

        <!-- Saga Timeout ERROR 로그 -->
        <appender name="SAGA_TIMEOUT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${SAGA_TIMEOUT_LOG_FILE}.log</file>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${SAGA_TIMEOUT_LOG_FILE}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${SAGA_ERROR_PATTERN}</pattern>
            </encoder>
        </appender>

        <!-- ES 인덱싱 INFO 로그 -->
        <appender name="ES_INDEX_INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${ES_INDEX_INFO_LOG_FILE}.log</file>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>DENY</onMatch>
                <onMismatch>ACCEPT</onMismatch>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${ES_INDEX_INFO_LOG_FILE}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${ES_INDEX_INFO_PATTERN}</pattern>
            </encoder>
        </appender>

        <!-- ES 인덱싱 ERROR 로그 -->
        <appender name="ES_INDEX_ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${ES_INDEX_ERROR_LOG_FILE}.log</file>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${ES_INDEX_ERROR_LOG_FILE}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${ES_INDEX_ERROR_PATTERN}</pattern>
            </encoder>
        </appender>

        <!-- ES 배치 INFO 로그 -->
        <appender name="ES_BATCH_INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${ES_BATCH_INFO_LOG_FILE}.log</file>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>DENY</onMatch>
                <onMismatch>ACCEPT</onMismatch>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${ES_BATCH_INFO_LOG_FILE}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${ES_BATCH_PATTERN}</pattern>
            </encoder>
        </appender>

        <!-- ES 배치 ERROR 로그 -->
        <appender name="ES_BATCH_ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${ES_BATCH_ERROR_LOG_FILE}.log</file>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${ES_BATCH_ERROR_LOG_FILE}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${ES_BATCH_PATTERN}</pattern>
            </encoder>
        </appender>

        <!-- ES 검색 INFO 로그 -->
        <appender name="ES_SEARCH_INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${ES_SEARCH_INFO_LOG_FILE}.log</file>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>DENY</onMatch>
                <onMismatch>ACCEPT</onMismatch>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${ES_SEARCH_INFO_LOG_FILE}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${ES_SEARCH_INFO_PATTERN}</pattern>
            </encoder>
        </appender>

        <!-- ES 검색 ERROR 로그 -->
        <appender name="ES_SEARCH_ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${ES_SEARCH_ERROR_LOG_FILE}.log</file>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${ES_SEARCH_ERROR_LOG_FILE}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${ES_SEARCH_ERROR_PATTERN}</pattern>
            </encoder>
        </appender>
    </springProfile>

    <!-- ES JSON 로그 (Stage 전용) - LogStash에서 사용 -->
    <springProfile name="stage">
        <appender name="ES_INDEX_JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${ES_INDEX_JSON_LOG_FILE}.json</file>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"application":"product", "service":"elasticsearch-index", "environment":"stage"}</customFields>
                <includeMdcKeyName>productCode</includeMdcKeyName>
                <includeMdcKeyName>productId</includeMdcKeyName>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${ES_INDEX_JSON_LOG_FILE}-%d{yyyy-MM-dd}.json.gz</fileNamePattern>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
        </appender>

        <appender name="ES_SEARCH_JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${ES_SEARCH_JSON_LOG_FILE}.json</file>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"application":"product", "service":"elasticsearch-search", "environment":"stage"}</customFields>
                <includeMdcKeyName>keyword</includeMdcKeyName>
                <includeMdcKeyName>suggestType</includeMdcKeyName>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${ES_SEARCH_JSON_LOG_FILE}-%d{yyyy-MM-dd}.json.gz</fileNamePattern>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
        </appender>
    </springProfile>

    <!-- ES JSON 로그 (Deploy 전용) - LogStash에서 사용 -->
    <springProfile name="deploy">
        <appender name="ES_INDEX_JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${ES_INDEX_JSON_LOG_FILE}.json</file>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"application":"product", "service":"elasticsearch-index", "environment":"deploy"}</customFields>
                <includeMdcKeyName>productCode</includeMdcKeyName>
                <includeMdcKeyName>productId</includeMdcKeyName>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${ES_INDEX_JSON_LOG_FILE}-%d{yyyy-MM-dd}.json.gz</fileNamePattern>
                <maxHistory>30</maxHistory>
                <totalSizeCap>3GB</totalSizeCap>
            </rollingPolicy>
        </appender>

        <appender name="ES_SEARCH_JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${ES_SEARCH_JSON_LOG_FILE}.json</file>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"application":"product", "service":"elasticsearch-search", "environment":"deploy"}</customFields>
                <includeMdcKeyName>keyword</includeMdcKeyName>
                <includeMdcKeyName>suggestType</includeMdcKeyName>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${ES_SEARCH_JSON_LOG_FILE}-%d{yyyy-MM-dd}.json.gz</fileNamePattern>
                <maxHistory>30</maxHistory>
                <totalSizeCap>3GB</totalSizeCap>
            </rollingPolicy>
        </appender>
    </springProfile>

    <!-- INFO, ERROR 로거 -->
    <!-- 추후 변동 가능 -->
    <springProfile name="stage | deploy">
        <logger name="service" level="INFO" additivity="false">
            <appender-ref ref="LOG_FILE"/>
            <appender-ref ref="ERROR_LOG_FILE"/>
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- Saga 추적 관련 로거 -->
        <logger name="saga" level="INFO" additivity="false">
            <appender-ref ref="SAGA_INFO_FILE"/>
            <appender-ref ref="SAGA_ERROR_FILE"/>
            <appender-ref ref="CONSOLE"/>
        </logger>

        <logger name="sagaTimeout" level="INFO" additivity="false">
            <appender-ref ref="SAGA_TIMEOUT_FILE"/>
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- ES 인덱싱 관련 로거 -->
        <logger name="esIndex" level="INFO" additivity="false">
            <appender-ref ref="ES_INDEX_INFO_FILE"/>
            <appender-ref ref="ES_INDEX_ERROR_FILE"/>
            <appender-ref ref="ES_INDEX_JSON_FILE"/>
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- ES 배치 관련 로거 -->
        <logger name="esBatch" level="INFO" additivity="false">
            <appender-ref ref="ES_BATCH_INFO_FILE"/>
            <appender-ref ref="ES_BATCH_ERROR_FILE"/>
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- ES 검색 관련 로거 -->
        <logger name="esSearch" level="INFO" additivity="false">
            <appender-ref ref="ES_SEARCH_INFO_FILE"/>
            <appender-ref ref="ES_SEARCH_ERROR_FILE"/>
            <appender-ref ref="ES_SEARCH_JSON_FILE"/>
            <appender-ref ref="CONSOLE"/>
        </logger>
    </springProfile>

    <!-- ROOT 로거: 콘솔 출력만 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>